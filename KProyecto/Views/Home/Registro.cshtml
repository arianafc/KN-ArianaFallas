@model KProyecto.Models.Autenticacion

@{
    Layout = "~/Views/Shared/_LayoutExterno.cshtml";
}

<main>

    <div class="auth-wrapper d-flex no-block justify-content-center align-items-center" style="background-image: url('../../images/auth-bg.jpg');">
        <div class="auth-box">
            <div id="loginform">
                <div class="logo">
                    <span class="db">
                        <img src="~/Images/logo-icon.png" />
                    </span>
                    <h5 class="font-medium m-b-20">Registrar Usuario</h5>
                </div>

                <div class="row">
                    <div class="col-12">

                        @using (@Html.BeginForm("Registro", "Home", FormMethod.Post, new
                        {
                            @class = "form-horizontal m-t-20"
                        }))
                        {

                            if (!string.IsNullOrEmpty(ViewBag.Mensaje))
                            {
                                <div class="alert alert-info text-center">
                                    @ViewBag.Mensaje
                                </div>
                            }
                            <div class="input-group mb-3">
                                <div class="input-group-prepend">
                                    <span class="input-group-text" id="basic-addon1"><i class="ti-user"></i></span>
                                    @Html.TextBoxFor(Model => Model.NombreUsuario, new { @type = "text", @class = "form-control form-control-lg", @placeholder = "Nombre Usuario" })
                                </div>
                            </div>
                            <div class="input-group mb-3">
                                <div class="input-group-prepend">
                                    <span class="input-group-text" id="basic-addon1"><i class="ti-user"></i></span>
                                    @Html.TextBoxFor(Model => Model.Contrasenna, new { @type = "password", @class = "form-control form-control-lg", @placeholder = "Password" })
                                </div>
                            </div>

                            <div class="input-group mb-3">
                                <div class="input-group-prepend">
                                    <span class="input-group-text" id="basic-addon1"><i class="ti-user"></i></span>
                                    @Html.TextBoxFor(Model => Model.Nombre, new { @type = "text", @class = "form-control form-control-lg", @placeholder = "Nombre" })
                                </div>
                            </div>

                            <div class="input-group mb-3">
                                <div class="input-group-prepend">
                                    <span class="input-group-text" id="basic-addon1"><i class="ti-user"></i></span>
                                    @Html.TextBoxFor(Model => Model.Correo, new { @type = "email", @class = "form-control form-control-lg", @placeholder = "Correo" })
                                </div>
                            </div>




                            <div class="form-group text-center">
                                <div class="col-xs-12 p-b-20">
                                    <button class="btn btn-block btn-lg btn-info" type="submit">Procesar</button>
                                </div>
                            </div>
                            <div class="form-group m-b-0 m-t-10">
                                <div class="col-sm-12 text-center">
                                    Ya tienes tienes una cuenta? <a href="@Url.Action("Index", "Home")" class="text-info m-l-5"><b>Inicia Sesión</b></a>
                                </div>
                            </div>

                        }


                    </div>
                </div>
            </div>
            <div id="recoverform">
                <div class="logo">
                    <span class="db"
<img src="~/Images/logo-icon.png" />></span>
                    <h5 class="font-medium m-b-20">Recover Password</h5>
                    <span>Enter your Email and instructions will be sent to you!</span>
                </div>
                <div class="row m-t-20">
                    <!-- Form -->
                    <form class="col-12" action="index.html">
                        <!-- email -->
                        <div class="form-group row">
                            <div class="col-12">
                                <input class="form-control form-control-lg" type="email" required="" placeholder="Username">
                            </div>
                        </div>
                        <!-- pwd -->
                        <div class="row m-t-20">
                            <div class="col-12">
                                <button class="btn btn-block btn-lg btn-danger" type="submit" name="action">Reset</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
    <!-- ============================================================== -->
    <!-- Login box.scss -->
    <!-- ============================================================== -->
</main>